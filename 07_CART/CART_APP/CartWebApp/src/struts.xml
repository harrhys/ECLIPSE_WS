<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.devMode" value="false" />


	<package name="default" namespace="/" extends="struts-default">

		<default-action-ref name="welcome" />

		<global-results>
			<result name="error">/jsps/error.jsp</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="error" />
		</global-exception-mappings>

		<action name="welcome">
			<result>/jsps/login.jsp</result>
		</action>

		<action name="home">
			<result>/jsps/home.jsp</result>
		</action>

		<action name="prodcat">
			<result>/jsps/createProdCategory.jsp</result>
		</action>

		<action name="stores">
			<result>/jsps/createStore.jsp</result>
		</action>

		<action name="createProduct">
			<result>/jsps/createProduct.jsp</result>
		</action>

		<action name="createProdCategory" class="com.farbig.cart.actions.ProductCategoryAction">
			<result name="sucess">/jsps/createProdCategory.jsp</result>
			<result name="error">/jsps/createProdCategory.jsp</result>
		</action>

		<action name="createStore" class="com.farbig.cart.actions.StoreCreationAction">
			<result name="sucess">/jsps/createStore.jsp</result>
			<result name="error">/jsps/createStore.jsp</result>
		</action>

		<action name="searchproducts" class="com.farbig.cart.actions.ProductSearchAction">
			<result name="sucess">/jsps/searchproducts.jsp</result>
			<result name="error">/jsps/searchproducts.jsp</result>
		</action>

		<action name="login" class="com.farbig.cart.actions.LoginAction">
			<result name="success">/jsps/home.jsp</result>
			<result name="error">/jsps/login.jsp</result>
		</action>
	</package>

	<!-- Add packages here -->

</struts>
