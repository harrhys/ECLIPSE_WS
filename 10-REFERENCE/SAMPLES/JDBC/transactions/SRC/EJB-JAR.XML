<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 1.1//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>

<ejb-jar>
  <enterprise-beans>
    <session>
      <display-name>jdbc-transactions</display-name>
      <ejb-name>jdbc-transactionsEJB</ejb-name>
      <home>samples.jdbc.transactions.ejb.WarehouseHome</home>
      <remote>samples.jdbc.transactions.ejb.Warehouse</remote>
      <ejb-class>samples.jdbc.transactions.ejb.WarehouseBean</ejb-class>
      <session-type>Stateful</session-type>
      <transaction-type>Bean</transaction-type>
	  <resource-ref>
	  	<res-ref-name>jdbc/jdbc-transactions</res-ref-name>
	  	<res-type>javax.sql.DataSource</res-type>
	  	<res-auth>Container</res-auth>
	  </resource-ref>
    </session>
  </enterprise-beans>
</ejb-jar>

