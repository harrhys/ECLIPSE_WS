<!DOCTYPE sun-ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Sun ONE Application Server 7.0 EJB 2.0//EN' 'http://www.sun.com/software/sunone/appserver/dtds/sun-ejb-jar_2_0-0.dtd'>

<sun-ejb-jar>
  <enterprise-beans>
    <name>jdbc-transactionsEjb.jar</name>
    <ejb>
      <ejb-name>jdbc-transactionsEJB</ejb-name>
      <jndi-name>ejb/jdbc-transactions</jndi-name>
   	  <resource-ref>
   	    <res-ref-name>jdbc/jdbc-transactions</res-ref-name>
	    <jndi-name>jdbc/jdbc-transactions</jndi-name>
      </resource-ref>
      <is-read-only-bean>false</is-read-only-bean> 
	  <bean-cache> 
	  	<max-cache-size>100</max-cache-size> 
		<cache-idle-timeout-in-seconds>60</cache-idle-timeout-in-seconds> 
		<removal-timeout-in-seconds>3600</removal-timeout-in-seconds> 
		<victim-selection-policy>LRU</victim-selection-policy> 
	</bean-cache>
	</ejb>  
  </enterprise-beans>
</sun-ejb-jar>

