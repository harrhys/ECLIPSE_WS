<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app>
  <display-name>jdbc-simple</display-name>
  <distributable></distributable>
  <servlet>
    <servlet-name>GreeterDBServlet</servlet-name>
    <servlet-class>samples.jdbc.simple.servlet.GreeterDBServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>GreeterDBLogDisplayServlet</servlet-name>
    <servlet-class>samples.jdbc.simple.servlet.GreeterDBLogDisplayServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>GreeterDBServlet</servlet-name>
	<url-pattern>/GreeterDBServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>GreeterDBLogDisplayServlet</servlet-name>
	<url-pattern>/GreeterDBLogDisplayServlet</url-pattern>
  </servlet-mapping>

  <resource-ref>
    <description></description>
    <res-ref-name>jdbc/jdbc-simple</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <ejb-ref>
    <ejb-ref-name>ejb/jdbc-simple</ejb-ref-name>
    <ejb-ref-type>Session</ejb-ref-type>
    <home>samples.jdbc.simple.ejb.GreeterDBHome</home>
    <remote>samples.jdbc.simple.ejb.GreeterDB</remote>
  </ejb-ref>
</web-app>

