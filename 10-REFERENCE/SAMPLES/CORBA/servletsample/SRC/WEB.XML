<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN' 'http://java.sun.com/j2ee/dtds/web-app_2_2.dtd'>

<web-app>
  <display-name>corba-client-servlet</display-name>
  <distributable></distributable>
  <servlet>
    <servlet-name>CorbaClientServlet</servlet-name>
    <servlet-class>samples.corba.servletsample.CorbaClientServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
    <servlet-mapping>
    <servlet-name>CorbaClientServlet</servlet-name>
    <url-pattern>/CorbaClientServlet</url-pattern>
  </servlet-mapping>
  <env-entry>
    <env-entry-name>orbDomainName</env-entry-name>
    <env-entry-value>my-domain</env-entry-value>
    <env-entry-type>java.lang.String</env-entry-type>
  </env-entry>
  <env-entry>
    <env-entry-name>orbCfgDir</env-entry-name>
    <env-entry-value>/etc/opt/iona/domains/my-domain</env-entry-value>
    <env-entry-type>java.lang.String</env-entry-type>
  </env-entry>
  <env-entry>
    <env-entry-name>simpleObjectIor1</env-entry-name>
    <env-entry-value>/export2/iona/asp/5.1/demos/corba/orb/simple1.ior</env-entry-value>
    <env-entry-type>java.lang.String</env-entry-type>
  </env-entry>
  <env-entry>
    <env-entry-name>simpleObjectIor2</env-entry-name>
    <env-entry-value>/export2/iona/asp/5.1/demos/corba/orb/simple2.ior</env-entry-value>
    <env-entry-type>java.lang.String</env-entry-type>
  </env-entry>
</web-app>
