<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/dtd/ejb-jar_2_0.dtd">

<ejb-jar>
  <display-name>SupplierJAR</display-name>
  <enterprise-beans>
    <entity>
      <description>Inventory CMP EJB</description>
      <display-name>InventoryEB</display-name>
      <ejb-name>InventoryEJB</ejb-name>
      <local-home>com.sun.j2ee.blueprints.supplier.inventory.ejb.InventoryLocalHome</local-home>
      <local>com.sun.j2ee.blueprints.supplier.inventory.ejb.InventoryLocal</local>
      <ejb-class>com.sun.j2ee.blueprints.supplier.inventory.ejb.InventoryEJB</ejb-class>
      <persistence-type>Container</persistence-type>
      <prim-key-class>java.lang.String</prim-key-class>
      <reentrant>False</reentrant>
      <cmp-version>2.x</cmp-version>
      <abstract-schema-name>Inventory</abstract-schema-name>
      <cmp-field>
        <field-name>itemId</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>quantity</field-name>
      </cmp-field>
      <primkey-field>itemId</primkey-field>
      <security-identity>
        <description>Description set to workaround RI bug 4634924</description>
        <use-caller-identity/>
      </security-identity>
      <query>
        <description>EJBQL to find all Inventory Items</description>
        <query-method>
          <method-name>findAllInventoryItems</method-name>
          <method-params/>
        </query-method>
        <ejb-ql>Select OBJECT(a) From Inventory a</ejb-ql>
      </query>
    </entity>
    <message-driven>
      <description>opc node to process PurchaseOrders from the Java Pet Store</description>
      <display-name>MsgBeanMDB</display-name>
      <ejb-name>MsgBean</ejb-name>
      <ejb-class>com.sun.j2ee.blueprints.supplier.processpo.ejb.MsgBean</ejb-class>
      <transaction-type>Container</transaction-type>
      <message-driven-destination>
        <destination-type>javax.jms.Queue</destination-type>
      </message-driven-destination>
      <ejb-local-ref>
        <ejb-ref-name>ejb/local/SupplierOrder</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>com.sun.j2ee.blueprints.supplierpo.order.ejb.SupplierOrderLocalHome</local-home>
        <local>com.sun.j2ee.blueprints.supplierpo.order.ejb.SupplierOrderLocal</local>
        <ejb-link>SupplierOrderEJB</ejb-link>
      </ejb-local-ref>
      <ejb-local-ref>
        <ejb-ref-name>ejb/local/Address</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>com.sun.j2ee.blueprints.address.ejb.AddressLocalHome</local-home>
        <local>com.sun.j2ee.blueprints.address.ejb.AddressLocal</local>
        <ejb-link>AddressEJB</ejb-link>
      </ejb-local-ref>
      <ejb-local-ref>
        <ejb-ref-name>ejb/local/ContactInfo</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>com.sun.j2ee.blueprints.contactinfo.ejb.ContactInfoLocalHome</local-home>
        <local>com.sun.j2ee.blueprints.contactinfo.ejb.ContactInfoLocal</local>
        <ejb-link>ContactInfoEJB</ejb-link>
      </ejb-local-ref>
      <ejb-local-ref>
        <ejb-ref-name>ejb/local/LineItem</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>com.sun.j2ee.blueprints.lineitem.ejb.LineItemLocalHome</local-home>
        <local>com.sun.j2ee.blueprints.lineitem.ejb.LineItemLocal</local>
        <ejb-link>LineItemEJB</ejb-link>
      </ejb-local-ref>
      <ejb-local-ref>
        <ejb-ref-name>ejb/local/Inventory</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>com.sun.j2ee.blueprints.supplier.inventory.ejb.InventoryLocalHome</local-home>
        <local>com.sun.j2ee.blueprints.supplier.inventory.ejb.InventoryLocal</local>
        <ejb-link>InventoryEJB</ejb-link>
      </ejb-local-ref>
      <resource-ref>
        <res-ref-name>jms/topic/TopicConnectionFactory</res-ref-name>
        <res-type>javax.jms.TopicConnectionFactory</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
      </resource-ref>
      <resource-ref>
        <res-ref-name>jms/queue/QueueConnectionFactory</res-ref-name>
        <res-type>javax.jms.QueueConnectionFactory</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
      </resource-ref>
      <resource-env-ref>
        <resource-env-ref-name>jms/topic/opc/InvoiceTopic</resource-env-ref-name>
        <resource-env-ref-type>javax.jms.Topic</resource-env-ref-type>
      </resource-env-ref>
    </message-driven>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <description>This value was set as a default by Forte For Java.</description>
      <method>
        <ejb-name>MsgBean</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <description>This value was set as a default by Forte For Java.</description>
      <method>
        <ejb-name>InventoryEJB</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
