<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN' 'http://java.sun.com/j2ee/dtds/web-app_2_2.dtd'>

<web-app>
  <display-name>pkgingBWAR2</display-name>
  <distributable></distributable>
  <servlet>
    <servlet-name>CompoundInterestServlet</servlet-name>
    <servlet-class>samples.packaging.pkgingB.servlet.CompoundInterestServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>CompoundInterest_Out</servlet-name>
    <jsp-file>CompoundInterest_Out.jsp</jsp-file>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>CompoundInterest_In</servlet-name>
    <jsp-file>CompoundInterest_In.jsp</jsp-file>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
      <servlet-name>CompoundInterestServlet</servlet-name>
      <url-pattern>/CompoundInterestServlet</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>500</session-timeout>
  </session-config>
  <ejb-ref>
    <ejb-ref-name>ejb/SunONE.pkging.pkgingEJB.CompoundInterest</ejb-ref-name>
    <ejb-ref-type>Session</ejb-ref-type>
    <home>samples.packaging.pkging.ejb.CompoundInterestHome</home>
    <remote>samples.packaging.pkging.ejb.CompoundInterest</remote>
    <ejb-link>SunONE.pkgingB.pkgingBEJB.CompoundInterest</ejb-link>
  </ejb-ref>
</web-app>

