<ejb-jar>
  <display-name>transactions-globalcmtEjb</display-name>
  <enterprise-beans>
    <session>
      <ejb-name>GlobalBankServiceEJB</ejb-name>
      <home>samples.transactions.ejb.cmt.simple.ejb.GlobalBankServiceHome</home>
      <remote>samples.transactions.ejb.cmt.simple.ejb.GlobalBankService</remote>
      <ejb-class>samples.transactions.ejb.cmt.simple.ejb.GlobalBankServiceEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <resource-ref>
	<description>Foreign Bank Database</description>
	<res-ref-name>jdbc/transactions-globalcmt/ForeignBankDB</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
      </resource-ref>
      <resource-ref>
	<description>Local Bank Database</description>
	<res-ref-name>jdbc/transactions-globalcmt/LocalBankDB</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
      </resource-ref>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
	<ejb-name>GlobalBankServiceEJB</ejb-name>
	<method-name>*</method-name>
      </method>
      <trans-attribute>Supports</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
	<ejb-name>GlobalBankServiceEJB</ejb-name>
	<method-intf>Remote</method-intf>
	<method-name>transferFunds</method-name>
      <method-params>
	<method-param>java.lang.String</method-param>
	<method-param>java.lang.String</method-param>
	<method-param>java.lang.String</method-param>
	<method-param>java.lang.String</method-param>
	<method-param>double</method-param>
      </method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
	<ejb-name>GlobalBankServiceEJB</ejb-name>
	<method-intf>Remote</method-intf>
	<method-name>getFromAccountNewBalance</method-name>
      </method>
      <trans-attribute>Supports</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
	<ejb-name>GlobalBankServiceEJB</ejb-name>
	<method-intf>Remote</method-intf>
	<method-name>getToAccountNewBalance</method-name>
      </method>
      <trans-attribute>Supports</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
	<ejb-name>GlobalBankServiceEJB</ejb-name>
	<method-intf>Remote</method-intf>
	<method-name>getToAccountOldBalance</method-name>
      </method>
      <trans-attribute>Supports</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
	<ejb-name>GlobalBankServiceEJB</ejb-name>
	<method-intf>Remote</method-intf>
	<method-name>getFromAccountOldBalance</method-name>
      </method>
      <trans-attribute>Supports</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>

