<web-app>
  <display-name>transactions-globalcmt</display-name>
  <distributable></distributable>
  <servlet>
    <servlet-name>GlobalCmtServlet</servlet-name>
    <servlet-class>samples.transactions.ejb.cmt.simple.servlet.GlobalCmtServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>GlobalTransaction</servlet-name>
    <jsp-file>GlobalTransaction.jsp</jsp-file>
    <load-on-startup>0</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>GlobalCmtServlet</servlet-name>
    <url-pattern>/GlobalCmtServlet</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>500</session-timeout>
  </session-config>
  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name></realm-name>
    <form-login-config>
      <form-login-page></form-login-page>
      <form-error-page></form-error-page>
    </form-login-config>
  </login-config>
  <ejb-ref>
    <ejb-ref-name>ejb/GlobalBankServiceEJBcmt</ejb-ref-name>
    <ejb-ref-type>Session</ejb-ref-type>
    <home>samples.transactions.ejb.cmt.simple.ejb.GlobalBankServiceHome</home>
    <remote>samples.transactions.ejb.cmt.simple.ejb.GlobalBankService</remote>
    <ejb-link>GlobalBankServiceEJB</ejb-link>
  </ejb-ref>
</web-app>

