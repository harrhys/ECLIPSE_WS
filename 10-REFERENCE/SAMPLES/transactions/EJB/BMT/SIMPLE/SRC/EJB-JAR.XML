<ejb-jar>
  <display-name>transactions-globalbmtEjb</display-name>
  <enterprise-beans>
    <session>
      <ejb-name>GlobalBankServiceEJB</ejb-name>
      <home>samples.transactions.ejb.bmt.simple.ejb.GlobalBankServiceHome</home>
      <remote>samples.transactions.ejb.bmt.simple.ejb.GlobalBankService</remote>
      <ejb-class>samples.transactions.ejb.bmt.simple.ejb.GlobalBankServiceEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Bean</transaction-type>
      <resource-ref>
	<description>Foreign Bank Database</description>
	<res-ref-name>jdbc/transactions-globalbmt/ForeignBankDB</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
      </resource-ref>
      <resource-ref>
	<description>Local Bank Database</description>
	<res-ref-name>jdbc/transactions-globalbmt/LocalBankDB</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
      </resource-ref>
    </session>
  </enterprise-beans>
</ejb-jar>

