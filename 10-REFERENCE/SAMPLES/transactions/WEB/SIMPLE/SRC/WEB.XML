<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
  <display-name>transactions-globalweb</display-name>
  <distributable></distributable>
  <servlet>
    <servlet-name>GlobalWebServlet</servlet-name>
    <servlet-class>samples.transactions.web.simple.servlet.GlobalWebServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>GlobalWebServlet</servlet-name>
    <url-pattern>/GlobalWebServlet</url-pattern>
  </servlet-mapping>

  <resource-ref>
    <description>ForeignBankDatabase</description>
    <res-ref-name>jdbc/transactions-globalweb/ForeignBankDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <resource-ref>
    <description>LocalBankDatabase</description>
    <res-ref-name>jdbc/transactions-globalweb/LocalBankDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>


</web-app>
