<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>

<ejb-jar>
  <display-name>javamail-simpleJAR</display-name>
  <enterprise-beans>
    <session>
      <display-name>javamail-simple</display-name>
      <ejb-name>javamail-simpleEJB</ejb-name>
      <home>samples.javamail.simple.ejb.ConfirmerHome</home>
      <remote>samples.javamail.simple.ejb.Confirmer</remote>
      <ejb-class>samples.javamail.simple.ejb.ConfirmerBean</ejb-class>
      <session-type>Stateful</session-type>
      <transaction-type>Bean</transaction-type>
      <security-identity>
        <description></description>
        <use-caller-identity></use-caller-identity>
      </security-identity>
      <resource-ref>
        <res-ref-name>TheMailSession</res-ref-name>
        <res-type>javax.mail.Session</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
      </resource-ref>
    </session>
  </enterprise-beans>
</ejb-jar>

