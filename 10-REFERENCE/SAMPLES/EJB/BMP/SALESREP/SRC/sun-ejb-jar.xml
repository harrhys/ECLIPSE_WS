<!DOCTYPE sun-ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Sun ONE Application Server 7.0 EJB 2.0//EN' 'http://www.sun.com/software/sunone/appserver/dtds/sun-ejb-jar_2_0-0.dtd'>

<sun-ejb-jar>
  <enterprise-beans>
    <name>bmp-salesrepEjb.jar</name>
    <unique-id>0</unique-id>
    <ejb>
      <ejb-name>SalesRepBean</ejb-name>
      <jndi-name>ejb/MySalesRep</jndi-name>
      <ejb-ref>
        <ejb-ref-name>ejb/Customer</ejb-ref-name>
        <jndi-name>ejb/MyCustomer</jndi-name>
      </ejb-ref>
      <resource-ref>
        <res-ref-name>jdbc/bmp-salesrepDB</res-ref-name>
        <jndi-name>jdbc/bmp-salesrepDB</jndi-name>
      </resource-ref>

      <ior-security-config>
        <transport-config>
          <integrity>SUPPORTED</integrity>
          <confidentiality>SUPPORTED</confidentiality>
          <establish-trust-in-target>SUPPORTED</establish-trust-in-target>
          <establish-trust-in-client>SUPPORTED</establish-trust-in-client>
        </transport-config>
        <as-context>
          <auth-method>USERNAME_PASSWORD</auth-method>
          <realm>DEFAULT</realm>
          <required>false</required>
        </as-context>
        <sas-context>
          <caller-propagation>SUPPORTED</caller-propagation>
        </sas-context>
      </ior-security-config>

      <gen-classes />
    </ejb>

    <ejb>
      <ejb-name>CustomerBean</ejb-name>
      <jndi-name>ejb/MyCustomer</jndi-name>
      <resource-ref>
        <res-ref-name>jdbc/bmp-salesrepDB</res-ref-name>
        <jndi-name>jdbc/bmp-salesrepDB</jndi-name>
      </resource-ref>

      <ior-security-config>
        <transport-config>
          <integrity>SUPPORTED</integrity>
          <confidentiality>SUPPORTED</confidentiality>
          <establish-trust-in-target>SUPPORTED</establish-trust-in-target>
          <establish-trust-in-client>SUPPORTED</establish-trust-in-client>
        </transport-config>
        <as-context>
          <auth-method>USERNAME_PASSWORD</auth-method>
          <realm>DEFAULT</realm>
          <required>false</required>
        </as-context>
        <sas-context>
          <caller-propagation>SUPPORTED</caller-propagation>
        </sas-context>
      </ior-security-config>
    </ejb>
  </enterprise-beans>
</sun-ejb-jar>
