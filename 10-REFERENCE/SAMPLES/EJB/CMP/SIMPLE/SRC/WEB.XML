<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
  <display-name>Product</display-name>
  <distributable></distributable>
  <servlet>
    <servlet-name>samples.ejb.cmp.simple.servlet.ProductServlet</servlet-name>
    <display-name>Servlet samples.ejb.cmp.simple.servlet.ProductServlet</display-name>
    <description>Default configuration created for servlet.</description>
    <servlet-class>samples.ejb.cmp.simple.servlet.ProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>samples.ejb.cmp.simple.servlet.ProductServlet</servlet-name>
    <url-pattern>/ProductServlet</url-pattern>
  </servlet-mapping>
  <ejb-ref>
    <ejb-ref-name>ejb/MyProduct</ejb-ref-name>
    <ejb-ref-type>Entity</ejb-ref-type>
    <home>samples.ejb.cmp.simple.ejb.ProductHome</home>
    <remote>samples.ejb.cmp.simple.ejb.Product</remote>
    <ejb-link>MyProduct</ejb-link>
  </ejb-ref>
</web-app>
