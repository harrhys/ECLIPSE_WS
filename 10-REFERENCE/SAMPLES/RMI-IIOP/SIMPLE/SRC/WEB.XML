<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN' 'http://java.sun.com/j2ee/dtds/web-app_2_2.dtd'>

<web-app>
  <display-name>RMIConverterApp</display-name>
  <distributable></distributable>
  <servlet>
    <servlet-name>index</servlet-name>
    <display-name>index</display-name>
    <jsp-file>index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>index.jsp</url-pattern>
  </servlet-mapping>
  <ejb-ref>
    <ejb-ref-name>ejb/RMIWConverter</ejb-ref-name>
    <ejb-ref-type>Session</ejb-ref-type>
    <home>samples.rmi.simple.ejb.ConverterHome</home>
    <remote>samples.rmi.simple.ejb.Converter</remote>
    <ejb-link>RMIConverter</ejb-link>
  </ejb-ref>
</web-app>

