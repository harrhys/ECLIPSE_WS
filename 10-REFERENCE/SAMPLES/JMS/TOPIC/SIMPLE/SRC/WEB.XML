<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app>
  <display-name>SampleTopic</display-name>
  <servlet>
    <servlet-name>SimpleTopicServlet</servlet-name>
    <display-name>SimpleTopicServlet</display-name>
    <servlet-class>samples.jms.simpletopic.SimpleTopicServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SimpleTopicServlet</servlet-name>
    <url-pattern>/topicSample</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <resource-env-ref>
    <resource-env-ref-name>jms/sampleTopic</resource-env-ref-name>
    <resource-env-ref-type>javax.jms.Topic</resource-env-ref-type>
  </resource-env-ref>
  <resource-ref>
    <res-ref-name>jms/sampleTCF</res-ref-name>
    <res-type>javax.jms.TopicConnectionFactory</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>

