<web-app>
  <display-name>Web Tier</display-name>
  <description></description>

  <listener>
    <listener-class>com.sun.j2ee.blueprints.smarticket.web.MIDPSessionListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>MIDPController</servlet-name>
    <display-name>MIDP Front Controller</display-name>
    <servlet-class>com.sun.j2ee.blueprints.smarticket.web.MIDPController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MIDPController</servlet-name>
    <url-pattern>/servlet/*</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>54</session-timeout>
  </session-config>

  <ejb-ref>
    <ejb-ref-name>ejb/MovieInfo</ejb-ref-name>
    <ejb-ref-type>Session</ejb-ref-type>
    <home>com.sun.j2ee.blueprints.smarticket.ejb.movieinfo.MovieInfoHome</home>
    <remote>com.sun.j2ee.blueprints.smarticket.ejb.movieinfo.MovieInfo</remote>
  </ejb-ref>
  <ejb-ref>
    <ejb-ref-name>ejb/TicketSales</ejb-ref-name>
    <ejb-ref-type>Entity</ejb-ref-type>
    <home>com.sun.j2ee.blueprints.smarticket.ejb.ticketsales.TicketSalesHome</home>
    <remote>com.sun.j2ee.blueprints.smarticket.ejb.ticketsales.TicketSales</remote>
  </ejb-ref>
  <ejb-ref>
    <ejb-ref-name>ejb/Customer</ejb-ref-name>
    <ejb-ref-type>Entity</ejb-ref-type>
    <home>com.sun.j2ee.blueprints.smarticket.ejb.customer.CustomerHome</home>
    <remote>com.sun.j2ee.blueprints.smarticket.ejb.customer.Customer</remote>
  </ejb-ref>
  <ejb-ref>
    <ejb-ref-name>ejb/LocaleInfo</ejb-ref-name>
    <ejb-ref-type>Session</ejb-ref-type>
    <home>com.sun.j2ee.blueprints.smarticket.ejb.localeinfo.LocaleInfoHome</home>
    <remote>com.sun.j2ee.blueprints.smarticket.ejb.localeinfo.LocaleInfo</remote>
  </ejb-ref>
</web-app>
