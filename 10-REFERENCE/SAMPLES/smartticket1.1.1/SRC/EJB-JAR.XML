<ejb-jar>
  <description>EJB Components</description>
  <display-name>EJB Tier</display-name>
  <enterprise-beans>
    <session>
      <description>MovieInfo EJB</description>
      <display-name>MovieInfo EJB</display-name>
      <ejb-name>MovieInfo</ejb-name>
      <home>com.sun.j2ee.blueprints.smarticket.ejb.movieinfo.MovieInfoHome</home>
      <remote>com.sun.j2ee.blueprints.smarticket.ejb.movieinfo.MovieInfo</remote>
      <ejb-class>com.sun.j2ee.blueprints.smarticket.ejb.movieinfo.MovieInfoEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <resource-ref>
        <res-ref-name>jdbc/MovieInfoDataSource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
      </resource-ref>
    </session>
    <session>
      <description>TicketSales EJB</description>
      <display-name>TicketSales EJB</display-name>
      <ejb-name>TicketSales</ejb-name>
      <home>com.sun.j2ee.blueprints.smarticket.ejb.ticketsales.TicketSalesHome</home>
      <remote>com.sun.j2ee.blueprints.smarticket.ejb.ticketsales.TicketSales</remote>
      <ejb-class>com.sun.j2ee.blueprints.smarticket.ejb.ticketsales.TicketSalesEJB</ejb-class>
      <session-type>Stateful</session-type>
      <transaction-type>Container</transaction-type>
      <resource-ref>
        <res-ref-name>jdbc/TicketSalesDataSource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
      </resource-ref>
    </session>
    <entity>
      <description>Customer EJB</description>
      <display-name>Customer EJB</display-name>
      <ejb-name>Customer</ejb-name>
      <home>com.sun.j2ee.blueprints.smarticket.ejb.customer.CustomerHome</home>
      <remote>com.sun.j2ee.blueprints.smarticket.ejb.customer.Customer</remote>
      <ejb-class>com.sun.j2ee.blueprints.smarticket.ejb.customer.CustomerEJB</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.String</prim-key-class>
      <reentrant>False</reentrant>
      <resource-ref>
        <res-ref-name>jdbc/CustomerDataSource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
      </resource-ref>
    </entity>
    <session>
      <description>LocaleInfo EJB</description>
      <display-name>LocaleInfo EJB</display-name>
      <ejb-name>LocaleInfo</ejb-name>
      <home>com.sun.j2ee.blueprints.smarticket.ejb.localeinfo.LocaleInfoHome</home>
      <remote>com.sun.j2ee.blueprints.smarticket.ejb.localeinfo.LocaleInfo</remote>
      <ejb-class>com.sun.j2ee.blueprints.smarticket.ejb.localeinfo.LocaleInfoEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <resource-ref>
        <res-ref-name>jdbc/LocaleInfoDataSource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
      </resource-ref>
    </session>
  </enterprise-beans>

  <assembly-descriptor>
    <method-permission>
      <unchecked />
      <method>
        <ejb-name>MovieInfo</ejb-name>
        <method-name>*</method-name>
      </method>
    </method-permission>      
    <method-permission>
      <unchecked/>
      <method>
        <ejb-name>Customer</ejb-name>
        <method-name>*</method-name>
      </method>
    </method-permission>      
    <method-permission>
      <unchecked/>
      <method>
        <ejb-name>TicketSales</ejb-name>
        <method-name>*</method-name>
      </method>
    </method-permission>      
    <method-permission>
      <unchecked/>
      <method>
        <ejb-name>LocaleInfo</ejb-name>
        <method-name>*</method-name>
      </method>
    </method-permission>      

    <container-transaction>
      <method>
        <ejb-name>MovieInfo</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>getMovies</method-name>
        <method-params>
          <method-param>java.lang.String</method-param>
        </method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>MovieInfo</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>getLocations</method-name>
        <method-params>
          <method-param>java.lang.String</method-param>
          <method-param>int</method-param>
        </method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>MovieInfo</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>getShowtimes</method-name>
        <method-params>
          <method-param>int</method-param>
          <method-param>int</method-param>
        </method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>TicketSales</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>getSeatingPlan</method-name>
        <method-params />
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>TicketSales</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>reserveSeats</method-name>
        <method-params>
          <method-param>java.util.Set</method-param>
        </method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>TicketSales</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>confirmSeats</method-name>
        <method-params />
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>TicketSales</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>cancelSeats</method-name>
        <method-params />
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>Customer</ejb-name>
        <method-intf>Home</method-intf>
        <method-name>remove</method-name>
        <method-params>
          <method-param>java.lang.Object</method-param>
        </method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>Customer</ejb-name>
        <method-intf>Home</method-intf>
        <method-name>remove</method-name>
        <method-params>
          <method-param>javax.ejb.Handle</method-param>
        </method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
     <method>
       <ejb-name>Customer</ejb-name>
       <method-intf>Remote</method-intf>
       <method-name>remove</method-name>
       <method-params />
     </method>
     <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>Customer</ejb-name>
        <method-intf>Home</method-intf>
        <method-name>create</method-name>
        <method-params>
          <method-param>java.lang.String</method-param>
          <method-param>java.lang.String</method-param>
          <method-param>java.lang.String</method-param>
          <method-param>java.lang.String</method-param>
        </method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>Customer</ejb-name>
        <method-intf>Home</method-intf>
        <method-name>findByPrimaryKey</method-name>
        <method-params>
          <method-param>java.lang.String</method-param>
        </method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>Customer</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>getInformation</method-name>
        <method-params />
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>LocaleInfo</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>getLocales</method-name>
        <method-params/>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>LocaleInfo</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>getMessages</method-name>
        <method-params>
          <method-param>int</method-param>
        </method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
