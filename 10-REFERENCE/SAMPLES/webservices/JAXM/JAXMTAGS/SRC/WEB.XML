<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
  <display-name>jaxmtags</display-name>

  <servlet>
    <servlet-name>jaxm.authenticated</servlet-name>
    <jsp-file>echo.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>jaxm.authenticated</servlet-name>
    <url-pattern>authecho.jsp</url-pattern>
  </servlet-mapping>

  <taglib>
    <taglib-uri>http://java.sun.com/jaxm</taglib-uri>
    <taglib-location>/WEB-INF/tld/jaxm.tld</taglib-location>
  </taglib>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>/authecho.jsp</web-resource-name>
      <url-pattern>/authecho.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>jaxm</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>BASIC</auth-method>
  </login-config>

</web-app>
