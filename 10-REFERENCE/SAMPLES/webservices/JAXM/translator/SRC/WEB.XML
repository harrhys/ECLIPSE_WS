<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
  <display-name>jaxm-translator</display-name>

  <servlet>
    <servlet-name>sender</servlet-name>
    <servlet-class>samples.webservices.jaxm.translator.SendingServlet</servlet-class>
	  <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>receiver</servlet-name>
    <servlet-class>samples.webservices.jaxm.translator.ReceivingServlet</servlet-class>
	  <load-on-startup>3</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>sender</servlet-name>
    <url-pattern>/translation</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>receiver</servlet-name>
    <url-pattern>/translationservice</url-pattern>
  </servlet-mapping>
</web-app>
