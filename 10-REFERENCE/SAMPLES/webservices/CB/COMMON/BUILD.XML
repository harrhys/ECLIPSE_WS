<project name="Coffee Break, common" default="core" basedir="."> 
  <target name="init"> 
      <tstamp/> 
  </target> 

  <property file="../../../common.properties"/>
  <property name="build" value="build" />
  <property name="common.javadocs.dir" value="build/docs/api"/>
  <property name="build.compiler" value="modern" /> 
  <target name="prepare" depends="init" 
   	description="Create build directories."> 
    <mkdir dir="${build}/com/sun/cb" /> 
  </target> 
 
  <!-- Executable Targets --> 
 
  <target name="compile" depends="prepare"  
     description="Compile .java files." > 
    <javac 
       srcdir="src" 
       destdir="${build}" 
       includes="**/*.java" 
     />
  </target>	  

  <target name="core" depends="banner, compile"
     description="Compiles source.">
  </target>

  <target name="clean"
     description="Removes the build directory.">
    <delete dir="${build}" />
  </target>

  <target name="javadocs" depends="core">
    <mkdir dir="${common.javadocs.dir}"/>
    <javadoc packagenames="com.sun.cb.*"
             destdir="${common.javadocs.dir}"
             author="false" version="true" use="true"
             windowtitle="common, Coffee Break API"
             doctitle="common, Coffee Break"
             bottom="Copyright &#169; 2001 Sun Microsystems Inc. All Rights Reserved.">
      <classpath refid="classpath" />
      <sourcepath>
        <pathelement path="src"/>
      </sourcepath>
    </javadoc>
  </target>

  <target name="banner">
      <echo>+---------------------------------------+</echo>
      <echo>+    Building common, Coffee Break Application +</echo>
      <echo>+---------------------------------------+</echo>
  </target>

</project> 
 
