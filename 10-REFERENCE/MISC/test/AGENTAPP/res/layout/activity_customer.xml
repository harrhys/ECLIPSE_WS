<ScrollView 
	    xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    tools:context=".CustomerActivity" >
	    
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">

		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/title_size"
		        android:text="@string/new_customer"
		        android:layout_marginBottom="20dp" 
		        style="@style/TitleLabel"/>
		    
		    <TextView 
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:text="@string/mobile_number"
		       android:layout_marginLeft="@dimen/padding_left"
		       android:layout_marginRight="@dimen/padding_right"/>    
		    <LinearLayout 
		        android:orientation="horizontal"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/padding_left"
		        android:layout_marginBottom="@dimen/padding_bottom"
		        android:layout_marginRight="@dimen/padding_right">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="40dp"
		        android:gravity="center_vertical"
		        android:text="@string/mobile_code"/> 

		    <EditText
		        android:id="@+id/mobile_number_edit_text_new_customer"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:maxLength="@string/mobileNumberMaxLength"
		        android:inputType="number"
		        android:hint="@string/enter_mobile_number"
		        android:selectAllOnFocus="true"
		        android:imeOptions="actionNext" />

		    </LinearLayout>  
 		    
		    <TextView 
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:text="@string/promoter_code"
		       android:layout_marginLeft="@dimen/padding_left"
		       android:layout_marginRight="@dimen/padding_right"/>
		    
		     <EditText 
		        android:id="@+id/promoter_code_edit_text_new_customer"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:hint="@string/enter_promoter_code"
		        android:layout_marginBottom="@dimen/padding_bottom"
		        android:layout_marginLeft="@dimen/padding_left"
		        android:layout_marginRight="@dimen/padding_right"
		        android:inputType="text"
		        android:selectAllOnFocus="true"
		        android:imeOptions="actionNext" />
		     		   
		    <TextView 
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:text="@string/first_name"
		       android:layout_marginLeft="@dimen/padding_left"
		       android:layout_marginRight="@dimen/padding_right" />
		    
		    <EditText 
		       android:id="@+id/first_name_edit_text_new_customer"
		       android:layout_width="match_parent"
		       android:layout_height="40dp"
		       android:hint="@string/enter_first_name" 
		       android:layout_marginBottom="@dimen/padding_bottom"
		       android:layout_marginLeft="@dimen/padding_left"
		       android:layout_marginRight="@dimen/padding_right"
		        android:inputType="text"
		        android:selectAllOnFocus="true"
		        android:imeOptions="actionNext" />
		    
		    <TextView 
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:text="@string/last_name"
		       android:layout_marginLeft="@dimen/padding_left"
		       android:layout_marginRight="@dimen/padding_right" />
		    
		    <EditText 
		        android:id="@+id/last_name_edit_text_new_customer"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:hint="@string/enter_last_name"
		        android:layout_marginBottom="@dimen/padding_bottom"
		        android:layout_marginLeft="@dimen/padding_left"
		        android:layout_marginRight="@dimen/padding_right"
		         android:inputType="text"
		        android:selectAllOnFocus="true"
		        android:imeOptions="actionNext" />
		     
		    <TextView 
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:text="@string/date_of_birth"
		       android:layout_marginLeft="@dimen/padding_left"
		       android:layout_marginRight="@dimen/padding_right" />
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginRight="@dimen/padding_right" >

		   <!--  <CalendarView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:maxDate="12/31/2000" 
		    />  -->   

		    <EditText
		        android:id="@+id/date_of_birth_edit_text_new_customer"
		        android:layout_width="0dp"
		        android:layout_height="40dp"
		        android:layout_marginBottom="@dimen/padding_bottom"
		        android:layout_marginLeft="@dimen/padding_left"
		        android:hint="@string/date_format"
		        android:layout_weight=".9"
		        android:inputType="date"
		        android:selectAllOnFocus="true"
		        android:imeOptions="actionNext" />

		    <Button
		        android:id="@+id/date_of_birth_date_picker_new_customer"
		        android:layout_width="0dp"
		        android:layout_height="40dp"
		        android:layout_weight=".15"
		        android:background="@drawable/calendar_icon" />
		    </LinearLayout>
		    <TextView 
		       android:id="@+id/gender_text_view_customer"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:text="@string/gender_text"
		       android:layout_marginLeft="@dimen/padding_left"
		       android:layout_marginRight="@dimen/padding_right" />
		    <Spinner
        		android:id="@+id/gender_spinner_new_customer"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/padding_left"
		        android:layout_marginRight="@dimen/padding_right"/>
		    <TextView 
		       android:id="@+id/id_type_text_view_new_customer"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:text="@string/id_type_text"
		       android:layout_marginLeft="@dimen/padding_left"
		       android:layout_marginRight="@dimen/padding_right" />
		    
		   	<Spinner
        		android:id="@+id/id_type_spinner_new_customer"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/padding_left"
		        android:layout_marginRight="@dimen/padding_right"/>
		    <TextView 
		       android:id="@+id/id_number_text_view_new_customer"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:text="@string/id_number_text"
		       android:layout_marginLeft="@dimen/padding_left"
		       android:layout_marginRight="@dimen/padding_right" />
		    
		    <EditText 
		        android:id="@+id/id_number_edit_text_new_customer"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:hint="@string/enter_id_number"
		        android:layout_marginBottom="@dimen/padding_bottom"
		        android:layout_marginLeft="@dimen/padding_left"
		        android:layout_marginRight="@dimen/padding_right"
		        android:digits="1234567890qwertyuiopasdfghjklzxcvbnm"
		        android:selectAllOnFocus="true"
		        android:imeOptions="actionNext" />
		    <Button 
		        android:id="@+id/submit_button_new_customer"
		        android:layout_width="100dp"
		        android:layout_height="50dp"
		        android:text="@string/next" 
		        android:layout_gravity="center"
		        android:background="@drawable/submit_buttons"/>
	</LinearLayout>
</ScrollView>
