<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context=".DepositMoneyActivity">
		<LinearLayout 
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:orientation="vertical">
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/title_size"
		        android:gravity="center"
		        android:text="@string/cash_in"
		        android:layout_marginBottom="20dp"
		        style="@style/TitleLabel" />
		   <LinearLayout
		    	android:layout_width="match_parent"
    			android:layout_height="match_parent"
    			android:orientation="vertical"> 
			    <TextView 
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:text="@string/mobile_number"
			       android:layout_marginLeft="@dimen/padding_left"
			       android:layout_marginRight="@dimen/padding_right"/>    
			     <LinearLayout 
			        android:orientation="horizontal"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="@dimen/padding_left"
			        android:layout_marginBottom="@dimen/padding_bottom"
			        android:layout_marginRight="@dimen/padding_right">
			   		 <TextView 
			       		 android:layout_width="wrap_content"
			       		 android:layout_height="40dp"
			       		 android:gravity="center_vertical"
			       		 android:text="@string/mobile_code"/> 
				    <EditText 
				        android:id="@+id/mobile_number_edit_text_deposit_money"
				        android:layout_width="match_parent"
				        android:layout_height="40dp"
				        android:maxLength="@string/mobileNumberMaxLength"
				        android:inputType="number"
				        android:hint="@string/enter_mobile_number" />
				 </LinearLayout>			    
			    <TextView 
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:text="@string/amount_to_deposit_text"
			       android:layout_marginLeft="@dimen/padding_left"
			       android:layout_marginRight="@dimen/padding_right"/>

			    <LinearLayout
			         android:orientation="horizontal"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="@dimen/padding_left"
			        android:layout_marginBottom="@dimen/padding_bottom"
			        android:layout_marginRight="@dimen/padding_right" >

			    <TextView 
			        android:text="@string/rupees_code"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight=".1"
			        android:gravity="center_vertical"/>
			    <EditText 
			        android:id="@+id/amount_to_deposit_edit_text"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight=".9"
			        android:inputType="date"
			       	android:hint="@string/enter_amount_to_deposit"/>
			   </LinearLayout> 
			    <Button 
			        android:id="@+id/submit_button_deposit_money"
			        android:layout_width="100dp"
			        android:layout_height="50dp"
			        android:text="@string/submit" 
			        android:layout_gravity="center"
			        android:background="@drawable/submit_buttons"/>
		</LinearLayout>    
</LinearLayout>
</ScrollView>