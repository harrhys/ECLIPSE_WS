<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_balance_table"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyCustomerResult">
	<TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_size"
        android:text="@string/verify_customer"
        style="@style/TitleLabel"
        android:layout_marginBottom="20dp" />
	<TextView
   		android:layout_width="match_parent"
   		android:layout_height="30dp"
   		android:gravity="center_vertical"
   		android:text="@string/verify_customer_result"
        android:textSize="20sp" 
        android:layout_marginTop="10dp" 
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/padding_right"/>   
	<TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 
        <TextView
            android:text="@string/first_name"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/first_name_text_view"
            android:padding="5dp"/>
    </TableRow>
	<TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 
        <TextView
            android:text="@string/last_name"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/last_name_text_view"
            android:padding="5dp"/>
    </TableRow>
	<TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 
        <TextView
            android:text="@string/mobile_number"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/mobile_number_text_view"
            android:padding="5dp"/>
    </TableRow>
	<TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 
        <TextView
            android:text="@string/registration_date"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/registration_date_text_view"
            android:padding="5dp"/>
    </TableRow>
	<TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 
        <TextView
            android:text="@string/product"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/program_code_text_view"
            android:padding="5dp"/>
    </TableRow>
	<TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 
        <TextView
            android:text="@string/status"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/status_text_view"
            android:padding="5dp"/>
    </TableRow>
	<TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 
        <TextView
            android:id="@+id/id_label_1_text_view"
            android:text=""
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/id_value_1_text_view"
            android:padding="5dp"/>
    </TableRow>
	<TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 
        <TextView
            android:id="@+id/id_label_2_text_view"
            android:text=""
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/id_value_2_text_view"
            android:padding="5dp"/>
    </TableRow>
</TableLayout>
