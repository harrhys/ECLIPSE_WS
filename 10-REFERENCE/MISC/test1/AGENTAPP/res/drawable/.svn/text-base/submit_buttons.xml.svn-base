<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#02508E" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#83B3D7"
                android:endColor="#0C61A4"
                android:angle="270" />
            <corners
                android:radius="10dp" />
            
        </shape>
    </item>
</selector>

