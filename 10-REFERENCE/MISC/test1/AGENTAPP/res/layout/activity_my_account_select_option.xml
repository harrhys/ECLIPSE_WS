<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context=".MyAccountSelectOptionActivity">
		<LinearLayout 
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:orientation="vertical">
			<TextView
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/title_size"
		        android:text="@string/my_account" 
		        android:layout_marginBottom="20dp"
		        style="@style/TitleLabel"/>
		
		    <Button
		        android:id="@+id/button_balance_my_account"
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:text="@string/balance" 
		        android:layout_marginLeft="@dimen/button_padding_left" 
		        android:layout_marginRight="@dimen/button_padding_right"
		        android:layout_marginTop="@dimen/padding_top" 
		        android:layout_marginBottom="@dimen/padding_bottom"
		        style="@style/CustomButton"/>
		    
		     <Button
		        android:id="@+id/button_history_my_account"
		        android:layout_width="match_parent"
		        android:layout_height="50dp" 
		        android:text="@string/history" 
		        android:layout_marginLeft="@dimen/button_padding_left" 
		        android:layout_marginRight="@dimen/button_padding_right"
		        android:layout_marginTop="@dimen/padding_top" 
		        android:layout_marginBottom="@dimen/padding_bottom"
		        style="@style/CustomButton"/>
		     
		      <Button
		        android:id="@+id/button_change_pin_my_account"
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:text="@string/change_pin" 
		        android:layout_marginLeft="@dimen/button_padding_left" 
		        android:layout_marginRight="@dimen/button_padding_right"
		        android:layout_marginTop="@dimen/padding_top" 
		        android:layout_marginBottom="@dimen/padding_bottom"
		        style="@style/CustomButton"/>
		</LinearLayout>
</ScrollView>