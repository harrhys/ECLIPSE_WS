<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context=".VerifyTransaction">
		<LinearLayout 
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:orientation="vertical">
	     		<TextView
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/title_size"
			        android:text="@string/cash_out"
			        android:layout_marginBottom="20dp" 
			        style="@style/TitleLabel"/>
			    
			    <TextView 
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:text="@string/mobile_number"
			       android:layout_marginLeft="@dimen/padding_left"
				   android:layout_marginRight="@dimen/padding_right"/>    
			    <LinearLayout 
			        android:orientation="horizontal"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="@dimen/padding_left"
			        android:layout_marginBottom="@dimen/padding_bottom"
			        android:layout_marginRight="@dimen/padding_right">
				    <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="40dp"
				        android:gravity="center"
				        android:text="@string/mobile_code"/> 
				    <EditText 
				        android:id="@+id/mobile_number_edit_text_verify_transaction"
				        android:layout_width="match_parent"
				        android:layout_height="40dp"
				        android:inputType="number"
				        android:maxLength="@string/mobileNumberMaxLength"
				        android:hint="@string/enter_mobile_number" /> 
			    </LinearLayout>
			    <TextView 
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:text="@string/transaction_id"
					android:layout_marginLeft="@dimen/padding_left"
				    android:layout_marginRight="@dimen/padding_right"/> 			     
			    <EditText 
			        android:id="@+id/transaction_id_edit_text_verify_transaction"
			        android:layout_width="match_parent"
			        android:layout_height="40dp"
			        android:inputType="number"
			        android:hint="@string/enter_transaction_id"
			        android:layout_marginBottom="@dimen/padding_bottom"
					android:layout_marginLeft="@dimen/padding_left"
				    android:layout_marginRight="@dimen/padding_right"/> 			
			    <Button 
			        android:id="@+id/submit_button_verify_transaction"
			        android:layout_width="100dp"
			        android:layout_height="50dp"
			        android:text="@string/submit" 
			        android:layout_gravity="center"
			        android:background="@drawable/submit_buttons"/>
		</LinearLayout>
</ScrollView>