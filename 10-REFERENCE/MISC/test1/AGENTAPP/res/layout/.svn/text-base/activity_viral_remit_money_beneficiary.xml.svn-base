<ScrollView 
	    xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    tools:context=".ViralRemitMoneyBeneficiaryActivity" >
	    
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">

		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/title_size"
		        android:text="@string/cash_out"
		        android:layout_marginBottom="20dp" 
		        style="@style/TitleLabel"/>
		    
		    <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="@string/beneficiary_details"
            android:textSize="20sp" />
		    
		    <TextView 
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:text="@string/first_name"
		       android:layout_marginLeft="@dimen/padding_left"
		       android:layout_marginRight="@dimen/padding_right" />
		    
		    <EditText 
		       android:id="@+id/beneficiary_first_name"
		       android:layout_width="match_parent"
		       android:layout_height="40dp"
		       android:hint="@string/enter_first_name" 
		       android:layout_marginBottom="@dimen/padding_bottom"
		       android:layout_marginLeft="@dimen/padding_left"
		       android:layout_marginRight="@dimen/padding_right"
		        android:inputType="text"
		        android:selectAllOnFocus="true"
		        android:imeOptions="actionNext" />
		    
		    <TextView 
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:text="@string/last_name"
		       android:layout_marginLeft="@dimen/padding_left"
		       android:layout_marginRight="@dimen/padding_right" />
		    
		    <EditText 
		        android:id="@+id/beneficiary_last_name"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:hint="@string/enter_last_name"
		        android:layout_marginBottom="@dimen/padding_bottom"
		        android:layout_marginLeft="@dimen/padding_left"
		        android:layout_marginRight="@dimen/padding_right"
		         android:inputType="text"
		        android:selectAllOnFocus="true"
		        android:imeOptions="actionDone" />
		     
		    <Button 
		        android:id="@+id/submit_button"
		        android:layout_width="100dp"
		        android:layout_height="50dp"
		        android:text="@string/submit" 
		        android:layout_gravity="center"
		        android:background="@drawable/submit_buttons"/>
	</LinearLayout>
</ScrollView>
